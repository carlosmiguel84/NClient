		<PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
		<PackageReference Include="morelinq" Version="3.3.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\NClient.Providers\NClient.Providers.HttpClient\NClient.Providers.HttpClient.csproj" />
		<ProjectReference Include="..\..\NClient.Providers\NClient.Providers.Resilience\NClient.Providers.Resilience.csproj" />
	</ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>NClient</_Parameter1>
		</AssemblyAttribute>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>NClient.AspNetProxy</_Parameter1>
		</AssemblyAttribute>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>NClient.AspNetProxy.Standalone</_Parameter1>
		</AssemblyAttribute>
